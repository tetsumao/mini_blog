- unless current_user == user
  - if current_user.following?(user)
    = form_for(current_user.user_relations.find_by(follow_id: user.id), html: { method: :delete, style: 'display: inline', remote: true }) do |f|
      = f.hidden_field :follow_id, value: user.id
      = f.submit 'フォロー中', class: 'follow-now'
  - else
    = form_for(current_user.user_relations.build, html: { style: 'display: inline', remote: true }) do |f|
      = f.hidden_field :follow_id, value: user.id
      = f.submit 'フォロー', class: 'follows'
